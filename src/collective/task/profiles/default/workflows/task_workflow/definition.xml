<?xml version="1.0"?>
<dc-workflow workflow_id="task_workflow"
  title="task_workflow"
  description="Workflow for basic tasks"
  state_variable="review_state"
  initial_state="created"
  manager_bypass="False"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n:domain="plone">
 <permission>Access contents information</permission>
 <permission>Delete objects</permission>
 <permission>Modify portal content</permission>
 <permission>Review portal content</permission>
 <permission>View</permission>
 <state state_id="closed" title="Closed" i18n:attributes="title">
  <exit-transition transition_id="back_in_realized"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Review portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
 </state>
 <state state_id="created" title="Created" i18n:attributes="title">
  <exit-transition transition_id="do_to_assign"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Add portal content" acquired="True">
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Review portal content" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
 </state>
 <state state_id="in_progress" title="In progress" i18n:attributes="title">
  <exit-transition transition_id="back_in_to_do"/>
  <exit-transition transition_id="do_realized"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Review portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
 </state>
 <state state_id="realized" title="Realized" i18n:attributes="title">
  <exit-transition transition_id="back_in_progress"/>
  <exit-transition transition_id="do_closed"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Review portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
 </state>
 <state state_id="to_do" title="To do" i18n:attributes="title">
  <exit-transition transition_id="do_in_progress"/>
  <exit-transition transition_id="back_in_created"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Review portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
 </state>
 <state state_id="to_assign" title="To assign" i18n:attributes="title">
  <exit-transition transition_id="auto_do_to_do"/>
  <exit-transition transition_id="do_to_do"/>
  <exit-transition transition_id="back_in_created"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Review portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Contributor</permission-role>
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
 </state>
 <transition transition_id="back_in_created" title="Back in created" new_state="created" trigger="USER" before_script="" after_script="" i18n:attributes="title">
  <action url="%(content_url)s/content_status_modify?workflow_action=back_in_created" category="workflow" icon="">Back in created</action>
  <guard>
   <guard-role>Reviewer</guard-role>
  </guard>
 </transition>
 <transition transition_id="back_in_progress" title="Back in progress" new_state="in_progress" trigger="USER" before_script="" after_script="" i18n:attributes="title">
  <action url="%(content_url)s/content_status_modify?workflow_action=back_in_progress" category="workflow" icon="" i18n:translate="">Back in progress</action>
  <guard>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </transition>
 <transition transition_id="back_in_realized" title="Back in realized" new_state="realized" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=back_in_realized" category="workflow" icon="" i18n:translate="">Back in realized</action>
  <guard>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </transition>
 <transition transition_id="back_in_to_do" title="Back in to do" new_state="to_do" trigger="USER" before_script="" after_script="" i18n:attributes="title">
  <action url="%(content_url)s/content_status_modify?workflow_action=back_in_to_do" category="workflow" icon="" i18n:translate="">Back in to do</action>
  <guard>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </transition>
 <transition transition_id="do_closed" title="Do closed" new_state="closed" trigger="USER" before_script="" after_script="" i18n:attributes="title">
  <action url="%(content_url)s/content_status_modify?workflow_action=do_closed" category="workflow" icon="" i18n:translate="">Do closed</action>
  <guard>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </transition>
 <transition transition_id="do_in_progress" title="Do in progress" new_state="in_progress" trigger="USER" before_script="" after_script="" i18n:attributes="title">
  <action url="%(content_url)s/content_status_modify?workflow_action=do_in_progress" category="workflow" icon="" i18n:translate="">Do in progress</action>
  <guard>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </transition>
 <transition transition_id="do_realized" title="Do realized" new_state="realized" trigger="USER" before_script="" after_script="" i18n:attributes="title">
  <action url="%(content_url)s/content_status_modify?workflow_action=do_realized" category="workflow" icon="" i18n:translate="">Do realized</action>
  <guard>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </transition>
 <transition transition_id="auto_do_to_do" title="Automatic do to do" new_state="to_do" trigger="AUTOMATIC" before_script="" after_script="" i18n:attributes="title">
  <action url="%(content_url)s/content_status_modify?workflow_action=auto_do_to_do" category="hidden" icon="" i18n:translate="">Automatic do to do</action>
  <guard>
    <guard-expression>here/auto_to_do_flag</guard-expression>
  </guard>
 </transition>
 <transition transition_id="do_to_assign" title="Do to assign" new_state="to_assign" trigger="USER" before_script="" after_script="" i18n:attributes="title">
  <action url="%(content_url)s/content_status_modify?workflow_action=do_to_assign" category="workflow" icon="" i18n:translate="">Do to assign</action>
  <guard>
  </guard>
 </transition>
 <transition transition_id="do_to_do" title="Do to do" new_state="to_do" trigger="USER" before_script="" after_script="" i18n:attributes="title">
  <action url="%(content_url)s/content_status_modify?workflow_action=do_to_do" category="workflow" icon="" i18n:translate="">Do to do</action>
  <guard>
    <guard-permission>Review portal content</guard-permission>
    <guard-expression>here/assigned_user</guard-expression>
  </guard>
 </transition>
</dc-workflow>
